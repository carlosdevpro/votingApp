<%- include('partials/header') %>

<div class="container mt-5">
  <h2 class="text-center mb-4">ðŸŽ® Register as a Player</h2>

  <% if (messages.success) { %>
  <div class="alert alert-success text-center"><%= messages.success[0] %></div>
  <% } %> <% if (messages.error) { %>
  <div class="alert alert-danger text-center"><%= messages.error[0] %></div>
  <% } %>

  <form action="/register/player" method="POST">
    <div class="mb-3">
      <label for="linkedPlayer" class="form-label">Select Your Name</label>
      <select
        name="linkedPlayer"
        id="linkedPlayer"
        class="form-select"
        required
      >
        <option value="">-- Choose Your Name --</option>
        <% players.forEach(player => { %>
        <option value="<%= player._id %>">
          <%= player.firstName %> <%= player.lastName %>
        </option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label for="shirtNumber" class="form-label"
        >Confirm Your Shirt Number</label
      >
      <input
        type="number"
        name="shirtNumber"
        id="shirtNumber"
        class="form-control"
        required
      />
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email Address</label>
      <input
        type="email"
        name="email"
        id="email"
        class="form-control"
        required
      />
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Create Password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control"
        required
      />
    </div>

    <div class="text-center">
      <button class="btn btn-primary">Register as Player</button>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
